{
  "trailingComma": "none",
  "overrides": [
    {
      "files": "**/*.{trigger,cls}",
      "options": {
        "tabWidth": 4,
        "printWidth": 120
      }
    },
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    }
  ]
}
